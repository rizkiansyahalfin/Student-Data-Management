<p id="notice"><%= notice %></p>
<title>Data Rayon</title>
<div class="container">
  <div class="card">
    <div class="row-3">
      <div class="card-header" align="center">
        <h1 align="center">Rayon</h1>
      </div>
    </div>
    <div class="card-body">
      <div class="col-md-12">
        <div class="container">
          <div class="row">
            <div class="col">
              <%= link_to 'New Rayon', new_rayon_path, class: 'btn btn-primary' %>
            </div>
          <div class="col">
          </div>
        </div>  
      </div>
    </div>
    <br>
      <table class="table table-bordered table-striped table-hover table-condensed table-sm">
      <caption>Table Rayon</caption>
        <thead align="center" class="table-dark">
          <tr>
            <th>Rayon</th>
            <th colspan="3">Aksi</th>
          </tr>
        </thead>
        <tbody align="center">
          <% @rayons.each do |rayon| %>
            <tr>
              <td><%= rayon.rayon.capitalize %></td>
              <td align="center" width="10%"><%= link_to 'Show', rayon, class: 'btn btn-info' %></td>
              <td align="center" width="10%"><%= link_to 'Edit', edit_rayon_path(rayon), class: 'btn btn-warning' %></td>
              <td align="center" width="10%"><%= link_to 'Destroy', rayon, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

      <br>
