<p id="notice"><%= notice %></p>
<title>Data Siswa</title>
<div class="container">
  <div class="card">
      <div class="card-header">
        <h1 align="center">Menu Permission</h1>
      </div>
      <div class="card-body">
        <div class="col-md-12">
          <div class="container">
            <%= link_to 'New Menu Permission', new_menu_permission_path, class: 'btn btn-primary' %> 
          </div>
        </div>
      <br>
          <table class="table table-bordered table-hover table-striped table-condensed table-sm">
            <thead align="center" class="table-dark">
              <tr>
                <th>Menu</th>
                <th>User</th>
                <th>Create</th>
                <th>Read</th>
                <th>Update</th>
                <th>Delete</th>
                <th colspan="3">Action</th>
              </tr>
            </thead>

            <tbody align="center">
              <% @menu_permissions.each do |menu_permission| %>
                <tr>
                  <td><%= menu_permission.menu.menu_name %></td>
                  <td><%= menu_permission.user.email %></td>
                  <td>
                    <% if menu_permission.create == true %>
                      <%= menu_permission.create = "Allowed" %>
                    <% else %>
                      <%= menu_permission.create = "Not Allowed"%>
                    <% end %>
                  </td>
                  <td>
                    <% if menu_permission.read == true %>
                      <%= menu_permission.read = "Allowed" %>
                    <% else %>
                      <%= menu_permission.read = "Not Allowed"%>
                    <% end %>
                  </td>
                  <td>
                    <% if menu_permission.uptodate == true %>
                      <%= menu_permission.uptodate = "Allowed" %>
                    <% else %>
                      <%= menu_permission.uptodate = "Not Allowed"%>
                    <% end %>
                  </td>
                  <td>
                    <% if menu_permission.remove == true %>
                      <%= menu_permission.remove = "Allowed" %>
                    <% else %>
                      <%= menu_permission.remove = "Not Allowed"%>
                    <% end %>
                  </td>
                  <td align="center" width="10%"><%= link_to 'Show', menu_permission, class: 'btn btn-info' %></td>
                  <td align="center" width="10%"><%= link_to 'Edit', edit_menu_permission_path(menu_permission), class: 'btn btn-warning' %></td>
                  <td align="center" width="10%"><%= link_to 'Destroy', menu_permission, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
      </div>

          <br>
