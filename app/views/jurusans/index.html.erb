<p id="notice"><%= notice %></p>
<title>Data Jurusan</title>
<div class="container">
  <div class="card">
    <div class="row-3">
      <div class="card-header" align="center">
        <h1 align="center">Jurusan</h1>
      </div>
    </div>
    <div class="card-body">
      <div class="col-md-12">
        <div class="container">
          <div class="row">
            <div class="col">
              <%= link_to 'New Jurusan', new_jurusan_path, class: 'btn btn-primary'%>
            </div>
          <div class="col">
        </div>
      </div>  
    </div>
  </div>
  <br> 
    <table class="table table-bordered table-striped table-hover table-condensed table-sm" align="center">
    <caption>Table Jurusan</caption>
      <thead align="center" class="table-dark">
        <tr>
          <th>Jurusan</th>
          <th colspan="3">Aksi</th>
        </tr>
      </thead>
      <tbody align="center">
        <% @jurusans.each do |jurusan| %>
          <tr>
            <td><%= jurusan.jurusan.upcase %></td>
            <td align="center" width="10%"><%= link_to 'Show', jurusan, class: 'btn btn-info' %></td>
            <td align="center" width="10%"><%= link_to 'Edit', edit_jurusan_path(jurusan), class: 'btn btn-warning' %></td>
            <td align="center" width="10%"><%= link_to 'Destroy', jurusan, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
<br>
